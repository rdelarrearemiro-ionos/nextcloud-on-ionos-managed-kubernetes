# Copy this file to dbaas-secret.yaml and fill in your DBaaS PostgreSQL credentials.
# dbaas-secret.yaml is git-ignored â€” never commit real credentials.
#
# Find your credentials in the IONOS DCD under:
# Databases > PostgreSQL > Your Instance > Connection Details
apiVersion: v1
kind: Secret
metadata:
  name: nextcloud-dbaas-credentials
  namespace: nextcloud
type: Opaque
stringData:
  db-host: "YOUR_DBAAS_HOST.dbaas.ionos.com"   # e.g. abc123.postgresql.dbaas.ionos.com
  db-port: "5432"
  db-name: "nextcloud"
  db-user: "YOUR_DB_USER"
  db-password: "YOUR_DB_PASSWORD"
